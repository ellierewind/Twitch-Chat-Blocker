{
  "manifest_version": 3,
  "name": "Twitch VOD Chat Blocker",
  "version": "2.0",
  "description": "Block chat messages from specific users in Twitch VODs",
  "permissions": [
    "contextMenus",
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "*://*.twitch.tv/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.twitch.tv/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Twitch VOD Chat Blocker"
  }
}